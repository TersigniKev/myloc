{% extends 'base.html.twig' %}

{% block title %}Objets{% endblock %}

{% block body %}
    <h1 class="display-1 text-center text-white mb-5">Tous les outils</h1>

    <table class="table w-50 mx-auto bg-white rounded-3 shadow-lg table-hover table-striped text-center">
        <thead>
                <tr>
                    <th>Nom</th>
                    <th>Voir plus</th>
                </tr>
            </thead>
        <tbody>
            {% for item in items %}
                <tr>
                    <td>{{ item.name|capitalize }}</td>
                    <td><a href="{{ path('app_showItem', {'id': item.id}) }}"><i class="fa-solid fa-eye"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="text-center my-4 mt-5 ">
        <a href="{{ path('app_category') }}" class="btn btn-primary">Rechercher par categorie</a>
    </div>

{% endblock %}
