{% extends 'base.html.twig' %}

{% block title %}Objets{% endblock %}

{% block body %}
    <h1 class="display-1 text-center text-white mb-5">Tous les objets</h1>

    {% if items is empty %}
        <p class="text-center text-white">Aucun item.</p>
    {% else %} 
        <div class="row row-cols-1 row-cols-md-4 g-4 w-100 mx-auto justify-content-center">
            {% for item in items %}
            <div class="card mb-5 border border-dark me-2 shadow-lg" style="max-width: 540px;">
                <div class="row g-0">
                    <div class="col-md-4">
                        <img src="{{ asset('uploads/' ~ item.picture) }}" alt="{{ item.name }}" class="img-fluid rounded-start mt-5">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <h5 class="card-title mb-3">{{ item.name|capitalize }}</h5>
                            <p class="card-text me-5">{{ item.description|raw }}</p>
                            <p class="card-text mt-5"><a href="{{ path('app_showItem', {'id': item.id}) }}" class="btn btn-primary"><i class="fa-solid fa-eye"></i> Voir</a></p>
                        </div>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <div class="text-center my-4 mt-5 ">
            <a href="{{ path('app_category') }}" class="btn btn-primary">Rechercher par categorie</a>
        </div>
    {% endif %}
{% endblock %}
